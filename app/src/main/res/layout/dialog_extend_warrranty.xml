<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_centerInParent="true"
        android:background="@drawable/shape_white"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="تمديد مدة التعميد"
            android:textColor="@color/Light_Blue"
            android:textSize="18sp"

            />

        <TextView
            android:id="@+id/txt_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="مدة التعميد لإتمام هذا المعاملة  يوم"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edt_days"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/shape_grey"
            android:inputType="number"
            android:paddingStart="10dp"
            android:textCursorDrawable="@drawable/black_cursor" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="20dp">


            <Button
                android:id="@+id/chnage_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_toStartOf="@+id/view"
                android:background="@mipmap/bt_grey1"
                android:text="لا"
                android:textColor="@color/white"

                />

            <View
                android:id="@+id/view"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_centerInParent="true" />

            <Button
                android:id="@+id/chnage_waranty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/view"
                android:background="@mipmap/bt_grey1"
                android:text="تغير مدة التعميد"
                android:textColor="@color/white"

                />

        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>