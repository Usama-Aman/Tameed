<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout_select_img_updateprofilelayout"
        android:layout_width="match_parent"
        android:layout_height="220sp"
        android:layout_alignParentBottom="true"
        android:background="#00000000"
        android:visibility="visible" >

        <RelativeLayout
            android:id="@+id/layout_popuptop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:background="@mipmap/textbox_popup"
            >
            <RelativeLayout
                android:id="@+id/gallery_rl"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:color/transparent">
                <TextView
                    android:id="@+id/gallery_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="الكاميرا"
                    android:textColor="@color/Light_Blue"
                    android:textSize="14sp" />

            </RelativeLayout>
            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grey"
                android:layout_below="@+id/gallery_rl"/>

            <RelativeLayout
                android:id="@+id/camera_rl"
                android:layout_below="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:color/transparent">
                <TextView
                    android:id="@+id/camera_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="الألبوم"
                    android:textColor="@color/Light_Blue"
                    android:textSize="14sp">
                </TextView>


            </RelativeLayout>

            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grey"
                android:layout_below="@+id/camera_rl"/>


            <RelativeLayout
                android:id="@+id/remove_rl"
                android:layout_below="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:color/transparent">
                <TextView
                    android:id="@+id/remove_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="إزالة"
                    android:textColor="@color/Light_Blue"
                    android:textSize="14sp">
                </TextView>


            </RelativeLayout>



        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/cancel_rl"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/layout_popuptop"
            android:background="@mipmap/textbox_popup">
            <TextView
                android:id="@+id/news_feed_cancel_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="إلغاء"
                android:textColor="@color/Light_Blue"
                android:textSize="14sp" >
            </TextView>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
