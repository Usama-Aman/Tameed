<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"

        android:layout_marginBottom="20dp"

        android:background="@drawable/shape_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="إلغاء المعاملة"
            android:textColor="@color/Light_Blue"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"

            android:textSize="18dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginStart="10dp"
            android:gravity="start"
            android:hint="اكتب سبب الإلغاء"
            android:inputType="textCapSentences|textMultiLine"
            android:padding="10dp"
            android:textColorHint="@color/Lightblack"
            android:layout_marginEnd="10dp"
            android:id="@+id/edt_reason"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textCursorDrawable="@drawable/black_cursor"
            android:textColor="@color/black"
            android:background="@drawable/shape_grey"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp">

            <Button
                android:id="@+id/send_cancel"
                android:layout_toStartOf="@+id/view"
                android:layout_marginEnd="2dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="إلغاء"
                android:textColor="@color/white"

                android:background="@mipmap/bt_grey1"/>
            <View
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_centerInParent="true"
                android:id="@+id/view"/>
            <Button
                android:id="@+id/send_admin"
                android:layout_toEndOf="@+id/view"
                android:layout_marginStart="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="إرسال للمشرف"
                android:textColor="@color/white"

                android:background="@mipmap/bt_grey1"/>
        </RelativeLayout>




    </LinearLayout>



</RelativeLayout>