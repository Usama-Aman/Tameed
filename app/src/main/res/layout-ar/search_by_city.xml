<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tameed.com.tameed.Search_by_city">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@mipmap/header"
        android:id="@+id/search_relative3">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:id="@+id/back_img"
            android:src="@mipmap/header_back"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_toEndOf="@+id/back_img"
            android:layout_below="@+id/header"
            android:layout_marginTop="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_white">





            <EditText
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center"
                android:hint="البحث عن طريق الإسم"
                android:textSize="15sp"
                android:singleLine="true"
                android:drawableEnd="@drawable/header_search"
                android:imeOptions="actionSearch"
                android:id="@+id/edt_search"
                android:background="@null"
                android:textColor="@color/dark_grey"
                />
        </RelativeLayout>
    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_relative3"
        android:id="@+id/search_by_city_recycle"/>

</RelativeLayout>

