<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout_select_img_updateprofilelayout"
        android:layout_width="match_parent"
        android:layout_height="120sp"
        android:layout_alignParentBottom="true"
        android:background="#00000000"
        android:visibility="visible" >

        <RelativeLayout
            android:id="@+id/layout_popuptop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:background="@mipmap/textbox_popup"
            >
            <RelativeLayout
                android:id="@+id/customer"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:color/transparent">
                <TextView
                    android:id="@+id/customer_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="عميل"
                    android:textColor="@color/Black"
                    android:textSize="14sp" />

            </RelativeLayout>
            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grey"
                android:layout_below="@+id/customer"/>

            <RelativeLayout
                android:id="@+id/provider"
                android:layout_below="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:color/transparent">
                <TextView
                    android:id="@+id/provider_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="مقدم الخدمة"
                    android:textColor="@color/Black"
                    android:textSize="14sp">
                </TextView>


            </RelativeLayout>

            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grey"
                android:layout_below="@+id/camera_rl"/>



        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
